<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Transparent" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SectionWarning" parent="@style/SectionTitle">
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:textColor">#ffff0000</item>
    </style>

    <style name="BigControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:layout_marginLeft">15sp</item> -->
        <!-- <item name="android:layout_marginRight">15sp</item> -->
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:paddingLeft">50sp</item>
        <item name="android:paddingRight">50sp</item>
        <item name="android:paddingTop">15sp</item>
        <!-- <item name="android:textSize">25sp</item> -->
    </style>

    <style name="SmallControl" parent="@style/BigControl">
        <!-- <item name="android:textSize">18sp</item> -->
        <item name="android:padding">10sp</item>
    </style>

</resources>